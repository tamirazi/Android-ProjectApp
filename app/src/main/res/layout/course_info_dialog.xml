<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layoutDirection="rtl"
        android:orientation="vertical"
        android:padding="15dp">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/save_btn"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="14dp"
            android:text="פרטי הקורס" />

        <EditText
            android:id="@+id/course_name_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="2dp"
            android:ems="10"
            android:fontFamily="@font/heebo"
            android:hint="שם הקרוס"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/loc_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/course_name_dialog"
            android:layout_below="@+id/course_name_dialog"
            android:layout_marginStart="10dp"
            android:ems="10"
            android:fontFamily="@font/heebo"
            android:hint="מיקום"
            android:inputType="textPersonName" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/save_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:fontFamily="@font/heebo_bold"
                android:text="שמירה"
                android:textColor="@android:color/holo_blue_light"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/cancle_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:fontFamily="@font/heebo"
                android:text="ביטול"
                android:textAlignment="textEnd"
                android:textColor="@android:color/holo_blue_light"
                android:textSize="18sp" />

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>